package io.vertigo.dynamo.file.data.domain

create Formatter FmtDefault {
     className :"io.vertigo.dynamox.domain.formatter.FormatterDefault"
}

create Formatter FmtDate {
     className :"io.vertigo.dynamox.domain.formatter.FormatterDate"
     args : "dd/MM/yyyy"
}

create Domain DoLabel {
	dataType : String
	formatter : FmtDefault
}

create Domain DoInstant {
	dataType : Instant
	formatter : FmtDate
}

create Domain DoUri {
	dataType : Long
	formatter : FmtDefault
}

create Domain DoSize {
	dataType : Long
	formatter : FmtDefault
}

create DtDefinition DtVxFileInfo {
	 id  filId 				{domain : DoUri 	label : "Identifiant" }
	 field fileName 		{domain : DoLabel 	label : "Nom" 					cardinality:"1" }
 	 field length 			{domain : DoSize 	label : "Taille" 				cardinality:"1" }
	 field lastModified 	{domain : DoInstant	label : "Date de modification" 	cardinality:"1" }
	 field fileData 		{domain : DoLabel	label : "data" 					cardinality:"?", persistent:"false" }	 
}