<?xml version =	'1.0' encoding = 'ISO-8859-1'?>
<config>
	<module name="vertigo-commons">
		<component api="AnalyticsManager" class="io.vertigo.commons.impl.analytics.AnalyticsManagerImpl" />
		<component api="CodecManager" class="io.vertigo.commons.impl.codec.CodecManagerImpl" />
	</module>
	<module name="vertigo-stella">
		<component api="WorkManager" class="io.vertigo.stella.impl.work.WorkManagerImpl">
			<param name="workerCount" value="10" />
		</component>

		<component api="NodeManager" class="io.vertigo.stella.impl.node.NodeManagerImpl">
			<plugin class="io.vertigo.stella.plugins.work.rest.worker.RestWorkerPlugin">
				<param name="nodeId" value="node-2-1" />
				<param name="timeoutSeconds" value="10" />
				<param name="serverUrl" value="http://127.0.0.1:10998" />
				<!-- On déclare la spécialisation des 10 workers du WorkManager : 5 de chaque pour les TU -->
				<param name="workTypes" value="io.vertigo.stella.work.mock.DivideWorkEngine^5" />
			</plugin>
			<plugin class="io.vertigo.stella.plugins.work.rest.worker.RestWorkerPlugin">
				<param name="nodeId" value="node-2-2" />
				<param name="timeoutSeconds" value="10" />
				<param name="serverUrl" value="http://127.0.0.1:10998" />
				<!-- On déclare la spécialisation des 10 workers du WorkManager : 5 de chaque pour les TU -->
				<param name="workTypes" value="io.vertigo.stella.work.mock.SlowWorkEngine^5" />
			</plugin>
		</component>
	</module>
</config>
