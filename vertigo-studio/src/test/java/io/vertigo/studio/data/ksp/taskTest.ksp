package io.vertigo.studio.dao

create Task TK_GET_FIRST_CAR {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select * from car
				limit 1
			"
	attribute dtoCar {domain : DO_DT_CAR_DTO  required:"false" inOut :"out"}
}


/*To test PAO*/
create Task TK_PING {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1
			"
	attribute result {domain : DO_INTEGER  required:"false" inOut :"out"}
}


create Task TK_ONE_PARAM_SELECT {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1 where 1 = #input#
	
			"
	attribute input {domain : DO_INTEGER  required:"true" inOut :"in"}
	attribute result {domain : DO_INTEGER  required:"true" inOut :"out"}
}

create Task TK_ONE_LIST_PARAM_SELECT {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1 where 1 in  (#input.ROWNUM#)
	
			"
	attribute input {domain : DO_INTEGERS  required:"true" inOut :"in"}
	attribute result {domain : DO_INTEGER  required:"true" inOut :"out"}
}


create Task TK_SELECT_CAR_BY_IDS {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select * from car where id in (#input.ROWNUM.ID#)
			"
	attribute input {domain : DO_DT_CAR_DTC  required:"true" inOut :"in"}		
	attribute dtoCar {domain : DO_DT_CAR_DTC  required:"true" inOut :"out"}
}