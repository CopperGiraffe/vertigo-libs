create Task TkGetActivityLogByAceId {
	storeName : "orchestra"
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
        request : "
        	select acl.*
        	from o_activity_log acl
        	where acl.ACE_ID = #aceId#
        	
			"
	attribute aceId	 	{domain : DoOIdentifiant 		cardinality: "1" 	inOut :"in"}
	attribute dtcOActivityLog	 	{domain : DoDtOActivityLogDto		cardinality: "?" 	inOut :"out"}
}







