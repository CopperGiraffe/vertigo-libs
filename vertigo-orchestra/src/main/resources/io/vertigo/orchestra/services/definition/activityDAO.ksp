package io.vertigo.orchestra.dao.definition




create Task TK_GET_FIRST_ACTIVITY_BY_PROCESS {
	storeName : "orchestra"
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
        request : "
        
        	select act.* 
                from O_ACTIVITY act 
                inner join(
                            select  activity.PRO_ID as PRO_ID,
                                   min(activity.NUMBER) as NUMBER_MIN
                            from O_ACTIVITY activity
                            
                            where activity.PRO_ID = #proId#
                            group by activity.PRO_ID
                        ) actMin on (act.PRO_ID = actMin.PRO_ID and act.NUMBER = actMin.NUMBER_MIN)
                 where 1=1
        	
			"
	attribute proId	 	{domain : DO_O_IDENTIFIANT 		required:"true" 	inOut :"in"}
	attribute dtOActivity	 	{domain : DO_DT_O_ACTIVITY_DTO 		required:"true" 	inOut :"out"}
}


create Task TK_GET_NEXT_ACTIVITY_BY_ACT_ID {
	storeName : "orchestra"
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
        request : "
        	select act.* 
                from O_ACTIVITY act 
                inner join(
                            select activity.PRO_ID as PRO_ID,
                                   min(activity.NUMBER) as NUMBER_MIN
                            from O_ACTIVITY activity
                            join O_ACTIVITY prevActivity on prevActivity.ACT_ID = #actId#
                            where activity.NUMBER > prevActivity.NUMBER 
                           
                                and activity.PRO_ID = prevActivity.PRO_ID
                            group by activity.PRO_ID
                        ) actMin on (act.PRO_ID = actMin.PRO_ID and act.NUMBER = actMin.NUMBER_MIN)
                 where 1=1
        	
        	
			"
		attribute actId	 	{domain : DO_O_IDENTIFIANT 		required:"true" 	inOut :"in"}
		attribute dtOActivity	 	{domain : DO_DT_O_ACTIVITY_DTO		required:"false" 	inOut :"out"}
}


create Task TK_GET_ACTIVITIES_BY_PRO_ID {
	storeName : "orchestra"
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
        request : "
        
        	select act.* 
                from O_ACTIVITY act 
                where act.PRO_ID = #proId#
        	
			"
	attribute proId	 	{domain : DO_O_IDENTIFIANT 		required:"true" 	inOut :"in"}
	attribute dtOActivities	 	{domain : DO_DT_O_ACTIVITY_DTC 		required:"true" 	inOut :"out"}
}


create Task TK_GET_ALL_ACTIVITIES_IN_ACTIVE_PROCESSES {
	storeName : "orchestra"
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
        request : "
        
        	select act.* 
                from O_ACTIVITY act 
                join O_PROCESS pro on pro.PRO_ID = act.PRO_ID
                where pro.ACTIVE_VERSION is true
        	
			"
	attribute dtOActivities	 	{domain : DO_DT_O_ACTIVITY_DTC 		required:"true" 	inOut :"out"}
}
