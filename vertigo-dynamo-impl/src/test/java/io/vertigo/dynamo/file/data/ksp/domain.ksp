package io.vertigo.dynamo.file.data.domain

create FileInfo FI_FILE_INFO_STD {
	storeName : "main"
}

create DtDefinition DT_VX_FILE_INFO {
	 id  FIL_ID 			{domain : DO_URI 	label : "Identifiant" }
	 field FILE_NAME 		{domain : DO_LABEL 	label : "Nom" 					required : "true" }
 	 field LENGTH 			{domain : DO_SIZE 	label : "Taille" 				required : "true" }
	 field LAST_MODIFIED 	{domain : DO_INSTANT	label : "Date de modification" 	required : "true" }
	 field FILE_DATA 		{domain : DO_LABEL	label : "data" 					required : "false", persistent:"false" }	 
}