<?xml version =	'1.0' encoding = 'ISO-8859-1'?>
<config>
	<boot locales="fr_FR">
		<plugin class="io.vertigo.core.plugins.resource.classpath.ClassPathResourceResolverPlugin" />
	</boot>

	<module name="vertigo-persona">
		<component api="VSecurityManager" class="io.vertigo.x.account.impl.security.VSecurityManagerImpl">
			<param name="userSessionClassName" value="io.vertigo.x.account.data.TestUserSession" />
		</component>
		<component api="IdentityManager" class="io.vertigo.x.account.impl.identity.IdentityManagerImpl"/>
		<component api="AuthentificationManager" class="io.vertigo.x.account.impl.authc.AuthentificationManagerImpl"/>
	</module>

	<module name="myApp">
		<definitions>
			<provider class="io.vertigo.dynamo.plugins.environment.DynamoDefinitionProvider" >
  			 	<param name="encoding" value="utf-8" />			
				<resource type ="kpr" path="security/generation.kpr"/>
			</provider>
		</definitions>
	</module>
</config>
