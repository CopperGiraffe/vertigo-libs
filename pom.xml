	<scm>
		<connection>scm:git:git@github.com:vertigo-io/vertigo.git</connection>
		<developerConnection>scm:git:git@github.com:vertigo-io/vertigo.git</developerConnection>
		<url>scm:git:git@github.com:vertigo-io/vertigo.git</url>
